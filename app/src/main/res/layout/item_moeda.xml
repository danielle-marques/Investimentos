<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView_item_moeda"
    android:layout_width="match_parent"
    android:layout_height="63dp"
    android:layout_marginHorizontal="24dp"
    android:layout_marginTop="24dp"
    android:backgroundTint="@color/black"
    android:clipToPadding="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fundo_personalizado">

        <TextView
            android:id="@+id/item_moeda"
            android:layout_width="148dp"
            android:layout_height="31dp"
            android:layout_margin="16dp"
            android:fontFamily="@font/arial_black"
            android:text="@string/moedas"
            android:textColor="#FFFFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_porcentagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/arial"

            android:text="@string/porcentagem"
            android:textAlignment="textEnd"
            android:textColor="#FF7ED321"
            android:textSize="20sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>